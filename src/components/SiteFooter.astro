---
import site from "../data/site.json";
---

<footer class="footer">
  <span>© {new Date().getFullYear()} {site.name}</span>
  <span class="dot">·</span>
  <span>{site.footerNote}</span>
</footer>

<style>
  .footer {
    margin-top: 40px;
    color: var(--muted);
    font-family: ui-sans-serif, system-ui;
    font-size: 13px;
  }

  .dot { margin: 0 8px; }
</style>
