---
const { title = "Xinran Li", description = "Research • Projects • Writing" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <div class="site">
      <slot />
    </div>
  </body>
</html>

<style>
  :global(:root) {
    --max: 1120px;
    --pad: 28px;
    --text: #1a1824;
    --muted: rgba(26, 24, 36, 0.68);
    --muted2: rgba(26, 24, 36, 0.52);
    --border: rgba(120, 112, 156, 0.16);
    --bg: #f8f6fb;
    --surface: #ffffff;
    --surface2: #fbf9ff;
    --accent: #b59ce3;
    --accent2: #8f74cf;
    --shadow: 0 10px 26px rgba(32, 24, 60, 0.08);
    --radius: 14px;
    --focus: 0 0 0 3px rgba(181, 156, 227, 0.35);
  }

  :global(*), :global(*::before), :global(*::after) { box-sizing: border-box; }

  :global(html, body) {
    margin: 0;
    background:
      radial-gradient(900px 520px at 85% -10%, rgba(181, 156, 227, 0.12), transparent 60%),
      var(--bg);
    color: var(--text);
    font-family: "Sora", "Space Grotesk", ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
    line-height: 1.7;
  }

  :global(body::before) {
    content: "";
    position: fixed;
    inset: 0;
    pointer-events: none;
    background-image:
      linear-gradient(0deg, rgba(255, 255, 255, 0.02), rgba(255, 255, 255, 0.02)),
      url("data:image/svg+xml;base64,");
    opacity: 0.22;
    z-index: -1;
  }

  :global(a) { color: inherit; }
  :global(a:hover) { color: var(--accent2); }
  :global(a:focus-visible) {
    outline: none;
    box-shadow: var(--focus);
    border-radius: 6px;
  }

  :global(h1) { font-size: 36px; letter-spacing: -0.02em; }
  :global(h2) { font-size: 26px; letter-spacing: -0.01em; }
  :global(h3) { font-size: 20px; }
  :global(p) { font-size: 16px; }

  :global(.card) {
    background: linear-gradient(180deg, var(--surface), var(--surface2));
    border: 1px solid var(--border);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    transition: transform 0.18s ease, box-shadow 0.18s ease, border-color 0.18s ease;
  }
  :global(.card:hover) {
    transform: translateY(-1px);
    box-shadow: 0 14px 34px rgba(32, 24, 60, 0.12);
    border-color: rgba(143, 116, 207, 0.35);
  }

  :global(.btn) {
    background: linear-gradient(135deg, rgba(181, 156, 227, 0.22), rgba(181, 156, 227, 0.08));
    border: 1px solid rgba(181, 156, 227, 0.6);
    color: var(--text);
    border-radius: 999px;
    padding: 10px 16px;
    cursor: pointer;
    font-family: inherit;
    transition: transform 0.18s ease, box-shadow 0.18s ease, border-color 0.18s ease;
  }
  :global(.btn:hover) {
    transform: translateY(-1px);
    border-color: var(--accent2);
    box-shadow: 0 10px 20px rgba(32, 24, 60, 0.12);
  }
  :global(.btn.secondary) {
    background: transparent;
    border-color: var(--border);
  }

  :global(.chip) {
    border: 1px solid rgba(181, 156, 227, 0.45);
    border-radius: 999px;
    padding: 2px 10px;
    font-size: 12px;
    font-family: ui-sans-serif, system-ui;
    color: var(--text);
    background: rgba(181, 156, 227, 0.08);
    transition: border-color 0.18s ease, background 0.18s ease;
  }
  :global(.chip:hover) {
    border-color: var(--accent2);
    background: rgba(143, 116, 207, 0.16);
  }

  @media (prefers-color-scheme: dark) {
    :global(:root) {
      --bg: #151320;
      --surface: #1c1928;
      --surface2: #221e33;
      --text: #f2effa;
      --muted: rgba(242, 239, 250, 0.65);
      --muted2: rgba(242, 239, 250, 0.5);
      --border: rgba(181, 156, 227, 0.2);
      --accent: #c8b2ff;
      --accent2: #a28ae6;
      --shadow: 0 12px 28px rgba(8, 6, 16, 0.35);
    }
    :global(body) {
      background:
        radial-gradient(900px 520px at 85% -10%, rgba(162, 138, 230, 0.18), transparent 60%),
        var(--bg);
    }
  }

  /* ✅ 兜底：任何页面都至少有左右 padding，不会贴边 */
  .site {
    width: 100%;
    padding: 46px var(--pad);
  }

  @media (max-width: 520px) {
    :global(:root) { --pad: 18px; }
    .site { padding: 28px var(--pad); }
  }
</style>
