---
const { title = "Xinran Li", description = "Research • Projects • Writing" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Plus+Jakarta+Sans:wght@600;700&family=Noto+Sans+SC:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <div class="site">
      <slot />
    </div>
  </body>
</html>

<style>
  :global(:root) {
    --max: 1120px;
    --pad: 28px;
    --bg: #fbf8ff;
    --bg2: #f2edff;
    --surface: #ffffff;
    --surface2: #f6f1ff;
    --border: rgba(146, 128, 204, 0.22);
    --text: #211a33;
    --textStrong: #1a142a;
    --muted: rgba(33, 26, 51, 0.68);
    --muted2: rgba(33, 26, 51, 0.5);
    --accent: #b8a0ff;
    --accent2: #8d6bff;
    --accentSoft: rgba(184, 160, 255, 0.18);
    --shadow: 0 14px 32px rgba(46, 35, 85, 0.12);
    --radius: 14px;
    --focus: 0 0 0 3px rgba(141, 107, 255, 0.35);
  }

  :global(*), :global(*::before), :global(*::after) { box-sizing: border-box; }

  :global(html, body) {
    margin: 0;
    background: linear-gradient(180deg, var(--bg), var(--bg2));
    color: var(--text);
    font-family: "Inter", "Noto Sans SC", ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
    line-height: 1.75;
  }

  :global(body::before) {
    content: "";
    position: fixed;
    inset: 0;
    pointer-events: none;
    background:
      radial-gradient(820px 520px at 85% -10%, rgba(184, 160, 255, 0.22), transparent 60%),
      radial-gradient(circle at 20% 10%, rgba(141, 107, 255, 0.12), transparent 45%),
      radial-gradient(circle at 70% 25%, rgba(184, 160, 255, 0.1), transparent 45%),
      radial-gradient(circle, rgba(141, 107, 255, 0.08) 1px, transparent 1.6px) 0 0 / 140px 140px,
      radial-gradient(circle, rgba(141, 107, 255, 0.08) 1px, transparent 1.6px) 60px 40px / 180px 180px;
    opacity: 0.42;
    z-index: -2;
  }

  :global(body::after) {
    content: "";
    position: fixed;
    inset: 0;
    pointer-events: none;
    background-image:
      linear-gradient(0deg, rgba(255, 255, 255, 0.02), rgba(255, 255, 255, 0.02)),
      url("data:image/svg+xml;base64,");
    opacity: 0.18;
    z-index: -1;
  }

  :global(a) { color: inherit; }
  :global(a:hover) { color: var(--accent2); }
  :global(a:focus-visible) {
    outline: none;
    box-shadow: var(--focus);
    border-radius: 6px;
  }

  :global(h1),
  :global(h2),
  :global(h3) {
    font-family: "Plus Jakarta Sans", "Noto Sans SC", ui-sans-serif, system-ui;
    color: var(--textStrong);
  }
  :global(h1) { font-size: 36px; letter-spacing: -0.02em; }
  :global(h2) { font-size: 26px; letter-spacing: -0.01em; }
  :global(h3) { font-size: 20px; }
  :global(p) { font-size: 16px; }

  :global(.card) {
    background: linear-gradient(180deg, var(--surface), var(--surface2));
    border: 1px solid var(--border);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    transition: transform 0.18s ease, box-shadow 0.18s ease, border-color 0.18s ease;
  }
  :global(.card:hover) {
    transform: translateY(-1px);
    box-shadow: 0 16px 36px rgba(46, 35, 85, 0.14);
    border-color: rgba(165, 139, 255, 0.45);
  }

  :global(.btn) {
    background: linear-gradient(135deg, rgba(184, 160, 255, 0.35), rgba(184, 160, 255, 0.14));
    border: 1px solid rgba(141, 107, 255, 0.6);
    color: var(--text);
    border-radius: 999px;
    padding: 10px 16px;
    cursor: pointer;
    font-family: inherit;
    transition: transform 0.18s ease, box-shadow 0.18s ease, border-color 0.18s ease;
  }
  :global(.btn:hover) {
    transform: translateY(-1px);
    border-color: var(--purple-3);
    box-shadow: 0 12px 24px rgba(46, 35, 85, 0.16);
  }
  :global(.btn.secondary) {
    background: transparent;
    border-color: var(--border);
  }

  :global(.chip) {
    border: 1px solid rgba(141, 107, 255, 0.45);
    border-radius: 999px;
    padding: 2px 10px;
    font-size: 12px;
    font-family: ui-sans-serif, system-ui;
    color: var(--text);
    background: rgba(184, 160, 255, 0.16);
    transition: border-color 0.18s ease, background 0.18s ease;
  }
  :global(.chip:hover) {
    border-color: var(--accent2);
    background: rgba(141, 107, 255, 0.2);
  }

  :global(.section-surface) {
    background: var(--surface2);
    border: 1px solid rgba(141, 107, 255, 0.2);
    border-radius: var(--radius);
    padding: 18px;
  }
  :global(.section-glow) {
    position: relative;
  }
  :global(.section-glow::before) {
    content: "";
    position: absolute;
    top: -14px;
    left: 0;
    right: 0;
    height: 18px;
    background: linear-gradient(90deg, transparent, rgba(165, 139, 255, 0.18), transparent);
  }

  :global(.sparkle-title) {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }
  :global(.sparkle-title::after) {
    content: "✦";
    font-size: 12px;
    color: var(--accent);
  }

  :global(.avatar-wrap) {
    position: relative;
    width: fit-content;
  }
  :global(.cat-charm) {
    position: absolute;
    right: -10px;
    bottom: -8px;
    width: 28px;
    height: 28px;
    background: var(--surface);
    border: 1px solid rgba(141, 107, 255, 0.5);
    border-radius: 10px;
    box-shadow: 0 8px 18px rgba(46, 35, 85, 0.18);
    display: grid;
    place-items: center;
    transform-origin: top center;
    transition: transform 0.2s ease;
  }
  :global(.avatar-wrap:hover .cat-charm) {
    transform: rotate(6deg);
  }
  :global(.cat-charm svg) {
    width: 18px;
    height: 18px;
    fill: var(--accent2);
  }

  @media (prefers-color-scheme: dark) {
    :global(:root) {
      --bg: #161326;
      --bg2: #1a1530;
      --surface: #1f1a35;
      --surface2: #241d3d;
      --text: #f3efff;
      --muted: rgba(243, 239, 255, 0.7);
      --muted2: rgba(243, 239, 255, 0.5);
      --border: rgba(165, 139, 255, 0.22);
      --purple-1: #d6c7ff;
      --purple-2: #b79cff;
      --purple-3: #9071f0;
      --glow: rgba(144, 113, 240, 0.25);
      --shadow: 0 14px 32px rgba(8, 6, 16, 0.4);
    }
    :global(body) {
      background: linear-gradient(180deg, var(--bg), var(--bg2));
    }
  }

  @media (prefers-reduced-motion: reduce) {
    :global(*) {
      animation: none !important;
      transition: none !important;
    }
  }

  /* ✅ 兜底：任何页面都至少有左右 padding，不会贴边 */
  .site {
    width: 100%;
    padding: 46px var(--pad);
  }

  @media (max-width: 520px) {
    :global(:root) { --pad: 18px; }
    .site { padding: 28px var(--pad); }
  }
</style>
