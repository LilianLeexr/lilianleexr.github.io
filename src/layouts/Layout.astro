---
const { title = "Xinran Li", description = "Research • Projects • Writing" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <div class="site">
      <slot />
    </div>
  </body>
</html>

<style>
  :global(:root) {
    --max: 1120px;
    --pad: 28px;
    --text: #111;
    --muted: rgba(17, 17, 17, 0.65);
    --muted2: rgba(17, 17, 17, 0.52);
    --border: rgba(17, 17, 17, 0.12);
    --bg: #fff;
  }

  :global(*), :global(*::before), :global(*::after) { box-sizing: border-box; }

  :global(html, body) {
    margin: 0;
    background: var(--bg);
    color: var(--text);
    font-family: ui-serif, Georgia, Cambria, "Times New Roman", Times, serif;
    line-height: 1.65;
  }

  :global(a) { color: inherit; }

  /* ✅ 兜底：任何页面都至少有左右 padding，不会贴边 */
  .site {
    width: 100%;
    padding: 46px var(--pad);
  }

  @media (max-width: 520px) {
    :global(:root) { --pad: 18px; }
    .site { padding: 28px var(--pad); }
  }
</style>
